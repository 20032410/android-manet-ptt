<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    
	    <Spinner android:id="@+id/spnChannel"
	    	android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:prompt="@string/prompt_channel"/>
	    
	    <!--
	    <Button android:id="@+id/btnInfo"
	        android:drawableRight="@drawable/info_icon"
	    	android:layout_width="wrap_content"
	        android:layout_height="fill_parent"/>
	    -->
    
	</LinearLayout>    
	    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    
	   	<ImageView android:id="@+id/microphone_image"
	    	android:src="@drawable/microphone_normal_image"
	    	android:layout_width="300dip"
		    android:layout_height="300dip"
		    android:layout_centerInParent="true"/>

	</RelativeLayout>
	   			
</LinearLayout>    	   	  	         	    	
